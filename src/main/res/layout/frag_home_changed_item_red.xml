<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="13.5dp"
    android:layout_marginRight="13.5dp"
    android:layout_marginTop="13.5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_red_portrait"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/tabbar_me"
                app:border_color="@color/colorAccent"
                app:border_width="2dp">

            </de.hdodenhof.circleimageview.CircleImageView>

            <ImageView
                android:id="@+id/item_red_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/item_red_portrait"
                tools:src="@drawable/frag_home_change_item_wemen"/>

            <TextView
                android:id="@+id/item_red_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_red_portrait"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="xqf"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_red_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="hhe"
                android:textColor="#333333"
                android:textSize="15sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:src="@drawable/frag_home_change_item_time"/>

                <TextView
                    android:id="@+id/item_red_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#7b7b7b"
                    android:textSize="13sp"
                    tools:text="20170526"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:src="@drawable/frag_home_change_item_position"/>

                <TextView
                    android:id="@+id/item_red_where"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#7b7b7b"
                    android:textSize="13sp"
                    tools:text="阳光天地"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:src="@drawable/frag_home_change_item_sum"/>

                <TextView
                    android:id="@+id/item_red_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:textColor="#7b7b7b"
                    android:textSize="13sp"
                    tools:text="1/2(未满)"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>