<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/frag_home_normal_square_bg"
                android:orientation="vertical">

                <Button
                    android:id="@+id/toolbar_btn_frag_home_change_state"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/frag_home_common_change_btn"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="切换"
                    android:textSize="12sp"/>
            </LinearLayout>


            <android.support.v7.widget.SearchView
                android:id="@+id/toolbar_searchview_frag_home"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                >
            </android.support.v7.widget.SearchView>


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/frag_home_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

    </RelativeLayout>


</RelativeLayout>