<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main_bottom"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/main_acvitivy_top_bar"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableTop="@drawable/home_gray"
                    android:onClick="onTabSelect"
                    android:paddingBottom="2dip"
                    android:paddingTop="7dip"
                    android:scaleType="matrix"
                    android:text="主页"

                    android:textColor="@drawable/tab_textcolor"
                    android:textSize="12sp"/>

                <!--<ImageView-->
                <!--android:id="@+id/iv_recent_tips"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->

                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentTop="true"-->

                <!--android:layout_marginRight="30dp"-->
                <!--android:layout_marginTop="3dp"-->

                <!--android:background="@drawable/common_msg_tips"-->
                <!--android:gravity="center"-->

                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="12sp"-->
                <!--android:visibility="gone"/>-->
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableTop="@drawable/message_gray"
                    android:onClick="onTabSelect"
                    android:paddingBottom="2dip"

                    android:paddingTop="7dip"
                    android:scaleType="matrix"
                    android:text="消息"
                    android:textColor="@drawable/tab_textcolor"
                    android:textSize="12sp"/>

                <ImageView
                    android:id="@+id/iv_recent_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/common_msg_tips"

                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:id="@+id/btn_add_task"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/add"
                    android:paddingBottom="2dip"
                    android:paddingTop="7dip"
                    android:scaleType="matrix"
                    android:textColor="@drawable/tab_textcolor"
                    android:textSize="12sp"/>
            </RelativeLayout>


            <Button
                android:id="@+id/btn_discover"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/discovery_gray"
                android:onClick="onTabSelect"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"

                android:scaleType="matrix"
                android:text="发现"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_personal_space"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/me_gray"
                android:onClick="onTabSelect"
                android:paddingBottom="2dip"
                android:paddingTop="7dip"

                android:scaleType="matrix"
                android:text="个人"
                android:textColor="@drawable/tab_textcolor"
                android:textSize="12sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_bottom"/>

    </RelativeLayout>


</LinearLayout>