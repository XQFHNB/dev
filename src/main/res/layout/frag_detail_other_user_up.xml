<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#303F9F"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/detail_other_user_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/deep"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/detail_other_user_level"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/detail_other_user_avatar"
                    android:src="@drawable/girl"/>
            </RelativeLayout>


            <TextView
                android:id="@+id/detail_other_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="xqf"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#FFFFFF"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/detail_other_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/detail_other_user_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="173cm"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/detail_other_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="24dp"
                    android:layout_toLeftOf="@id/detail_other_user_height"
                    android:text="23岁"
                    android:textColor="#FFFFFF"/>


                <TextView
                    android:id="@+id/detail_other_user_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="24dp"
                    android:layout_toRightOf="@id/detail_other_user_height"
                    android:text="78kg"
                    android:textColor="#FFFFFF"/>

            </RelativeLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/detail_other_user_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="很难受"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_other_user_signature"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="关注"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/detail_other_user_followed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=" 0"
                    android:textColor="#FFFFFF"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"

                    android:text="关注我"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/detail_other_user_followme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="0 "
                    android:textColor="#FFFFFF"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RatingBar
            android:id="@+id/detail_other_user_ratingbar"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"/>

        <TextView
            android:id="@+id/detail_other_user_addlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="添加标签"
            android:textColor="#030303"
            android:textSize="18sp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="自评"
            android:textColor="#030303"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/right_btn_selfcomment1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_selfcomment2"

            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_selfcomment3"

            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_selfcomment4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="他评"
            android:textColor="#030303"

            android:textSize="18sp"/>


        <TextView
            android:id="@+id/right_btn_othercomment1"
            android:layout_width="0dp"

            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_othercomment2"
            android:layout_width="0dp"

            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_othercomment3"
            android:layout_width="0dp"

            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>

        <TextView
            android:id="@+id/right_btn_othercomment4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_frag_personal_viewpager_right"
            android:gravity="center_horizontal"
            android:text="阳光"
            android:textColor="#030303"

            android:textSize="18sp"/>


    </LinearLayout>

</LinearLayout>